#!/usr/bin/env zsh
set -ue

candidates="$(find /media/videos/{films,tv} -maxdepth 1)"

shortnames="$(printf "%s" "$candidates" |
  sed -r "s#/media/videos/(tv|films)/?##;s#\..{3,4}\$##")"

choice="$(printf "%s" "$shortnames" |
  grep -v "^[ \t]*$" |
  uniq |
  shuf |
  dmenu -p "watch")"

fullpath="$(printf "%s" "$candidates" |
  egrep "^/media/videos/(films|tv)/$choice(\..{3,4})?\$" |
  head -n 1)" # just in case two share a name, pick the first

if [[ -d "$fullpath" ]]; then
  exec mpv-random "$fullpath"
elif [[ -f "$fullpath" ]]; then
  exec mpv "$fullpath"
fi
